.button {
  display: inline-block;
  margin: 4px;
  background: #e0e1e2;
  padding: 0 24px;
  color: rgba(0, 0, 0, 0.6);
  font-weight: bold;
  border-radius: 1px;
  font-size: 32rpx
}

.button::after{
  content: none;
}

.button.primary{
  background: rgba(0, 0, 0, 1);
  color:rgba(255, 255, 255, 1);
}
.button-hover{
  opacity: 0.75;
}